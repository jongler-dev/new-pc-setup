{
  //   "editor.detectIndentation": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "fira code, ubuntu mono",
  "editor.fontSize": 16,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.padding.top": 12,
  "editor.renderWhitespace": "boundary",
  "files.autoSave": "onFocusChange",
  "files.exclude": {
    "**/node_modules": true
  },
  // "security.workspace.trust.untrustedFiles": "open",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.fontFamily": "ubuntu mono, fira code, monospace",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.rightClickBehavior": "paste",
  "todo-tree.highlights.useColourScheme": true,
  // "todo-tree.general.tags": ["BUG", "TODO", "FIXME", "HACK"],
  "window.zoomLevel": 1,
  "workbench.colorTheme": "Atom One Dark",
  "workbench.colorCustomizations": {
    "tab.activeBackground": "#474745",
    "tab.activeBorder": "#1989fa",
    "tab.activeBorderTop": "#1989fa"
  },
  "workbench.iconTheme": "material-icon-theme"
}
